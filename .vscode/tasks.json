{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "group": "build",
      "presentation": {
        "reveal": "never"
      },
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "compile",
      "type": "npm",
      "script": "compile",
      "group": "build",
      "presentation": {
        "panel": "shared",
        "reveal": "silent",
        "clear": false
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build LSP Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "options": {
        "cwd": "../sugarcss-lsp-server"
      },
      "group": "build",
      "presentation": {
        "panel": "shared",
        "reveal": "silent",
        "clear": false
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build All",
      "dependsOrder": "sequence",
      "dependsOn": ["Build LSP Server", "compile"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
