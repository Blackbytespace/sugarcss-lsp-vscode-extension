{
  "name": "@blackbyte/lsp-vscode-client",
  "description": "VS Code extension for SugarCSS LSP Server",
  "version": "0.0.1",
  "publisher": "blackbyte",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:css"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "css",
        "aliases": [
          "CSS",
          "css"
        ],
        "extensions": [
          ".css"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SugarCSS LSP Server",
      "properties": {
        "sugarcssLspServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 1000,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "sugarcssLspServer.enableCompletion": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable/disable code completion."
        },
        "sugarcssLspServer.enableHover": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable/disable hover information."
        },
        "sugarcssLspServer.enableDiagnostics": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable/disable diagnostics."
        },
        "sugarcssLspServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "npm run build && vsce package",
    "publish": "npm run build && vsce publish"
  },
  "dependencies": {
    "@blackbyte/sugarcss-lsp-server": "^0.0.1",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.19.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blackbytespace/monorepo.git",
    "directory": "packages/sugarcss-lsp-vscode-client"
  },
  "license": "MIT"
}
